<%= form_with model: course do |f| %>
  <%= render "shared/error_messages", resource: course %>
  
  <div>
    <%= f.label :name, 'Nome'%>
    <%= f.text_field :name %>
    <%# course.errors.full_messages_for(:name).each do |message| %>
      <!==<div><%#= message %></div> -->
    <%# end %>
  </div>
  <%= f.label :description, 'Descrição'%>
  <%= f.text_area :description %>
  <%= f.label :code, 'Código'%>
  <%= f.text_field :code %>
  <%= f.label :price, 'Preço'%>
  <%= f.number_field :price %>
  <%= f.label :enrollment_deadline, 'Data limite de matrícula'%>
  <%= f.date_field :enrollment_deadline %>

  <%= f.submit course.persisted? ? 'Atualizar' : 'Criar curso' %>

<% end %>